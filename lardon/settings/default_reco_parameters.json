	    "window":-1 /*size of the sliding window*/
	},
	
	"study":{
	    "to_be_done":0,
	    "nchunk":16
	}
    },
    
    "hit_finder":{ 
	"dt_min": 10,
	"min_thr":0.5,
        "coll":{
            "amp_sig": [2.5,5.5],
        },
        "ind":{
            "amp_sig": 2,
	    "merge_tdc_thr":10
        },
        "pad":{
            "left": 10,
            "right": 20
        }
    },
    
    "track_2d":{
