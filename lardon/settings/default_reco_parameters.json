{
    "pedestal":{ 
        "raw_rms_thr": 3, /*basic threshold for ROI*/
	"n_iter":2 /*number of iteration for roi-rms computation*/
    },
	 
    "mask":{ /*parameters for better ROI*/
	"coll":{ /*collection views - unipolar signal*/
	    "min_dt":10,
	    "low_thr":[2.0,2.0],
	    "high_thr":[5.0,3.0],
	    "min_rise":3,
	    "min_fall":8,
	    "pad_bef":10,
	    "pad_aft":15
	},
	  
	"ind":{ /*for induction views - bipolar signal*/
	    "max_dt_pos_neg":20,
	    "pad_bef":10,
	    "pad_aft":15,
	    "pos":{
		"min_dt":8,
		"low_thr":[1.8,2.0],
		"high_thr":[2.5,3.0],
		"min_rise":3,
		"min_fall":1
	    },
	    
	    "neg":{
		"min_dt":8,
		"low_thr":[-1.8,-1.8],
		"high_thr":[-2.5,-2.5],
		"min_rise":1,
		"min_fall":3
	    }
	}
    },
	 
    "noise":{
